<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:id="@+id/mtxt"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Student"/>

    <TextView
        android:id="@+id/txt5"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/mtxt"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mname"
        android:layout_below="@+id/mtxt"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="Name"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textSize="10sp"
        android:layout_below="@+id/mname"
        android:id="@+id/txt1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/msname"
        android:layout_below="@+id/txt1"
        android:textSize="20sp"
        android:text="Surname"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="10sp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/msname"
        android:id="@+id/txt2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mbday"
        android:layout_below="@+id/txt2"
        android:textSize="20sp"
        android:text="Birthday"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/mbday"
        android:layout_marginLeft="10dp"
        android:textSize="10sp"
        android:id="@+id/txt3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mmajor"
        android:layout_below="@+id/txt3"
        android:textSize="20sp"
        android:text="Major"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="10sp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/mmajor"
        android:id="@+id/txt4"/>

</RelativeLayout>